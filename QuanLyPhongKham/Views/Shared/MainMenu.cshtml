@model List<Model.EF.Menu>

<style>
    .modal-backdrop {
        z-index: 1 !important;
    }

    .show-from {
        display: block;
    }

    .hiden-form {
        display: none;
    }

    .modal-content {
        min-width: 60vw;
        position: fixed;
        left: 50%;
        transform: translateX(-50%);
        margin-top: 5%;
        border-style: none;
        background-color: rgba(255, 255, 255, 0) !important;
    }
</style>

<link href="~/Assets/web/css/login.css" rel="stylesheet" />

<div class="collapse navbar-collapse" id="navbarResponsive">
    <ul class="navbar-nav ml-auto">
        @foreach (var item in Model)
        {
            <li class="nav-item">
                <a class="nav-link active" target="@item.Target" href="@item.Link">@item.Text</a>
            </li>
        }

        <li class="nav-item form-dn">
            <a class="nav-link active" target="" href="" data-toggle="modal" data-target="#exampleModalCenter">Đăng nhập</a>
        </li>


        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="container" id="container">
                        <div class="form-container sign-up-container">
                            <form action="#" style="overflow-y: auto">
                                <h1 style="padding-top:30%;padding-bottom:20px;">Create Account</h1>
                                @*<div class="social-container">
                                        <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                                        <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                                        <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                                    </div>*@
                                @*<span>or use your email for registration</span>*@
                                <input type="text" placeholder="Họ và Tên" />
                                <input type="text" placeholder="Số Điện Thoại" />
                                <input type="text" placeholder="Tên Tài Khoản" />
                                <input type="password" placeholder="Mật Khẩu" />
                                <input type="password" placeholder="Nhập Lại Mật Khẩu" />
                                <button style="margin: 20px 0px">Sign Up</button>
                            </form>
                        </div>
                        <div class="form-container sign-in-container">
                            <form action="#">
                                <h1 style="padding-bottom:30px">Sign in</h1>
                                @*<div class="social-container">
                                        <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                                        <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                                        <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                                    </div>*@
                                @*<span>or use your account</span>*@
                                <input type="text" placeholder="Tài Khoản" />
                                <input type="password" placeholder="Mật Khẩu" />
                                @*<a href="#">Forgot your password?</a>*@
                                <button>Sign In</button>
                            </form>
                        </div>
                        <div class="overlay-container">
                            <div class="overlay">
                                <div class="overlay-panel overlay-left">
                                    <h1>Welcome</h1>
                                    <p>Nhấn vào SIGN IN để Đăng Nhập Tài Khoản</p>
                                    <button class="ghost" id="signIn">Sign In</button>
                                </div>
                                <div class="overlay-panel overlay-right">
                                    <h1>Welcome</h1>
                                    <p>Nhấn vào SIGN UP để Đăng Ký Tài Khoản</p>
                                    <button class="ghost" id="signUp">Sign Up</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @*<li class="nav-item">
                <a class="nav-link active" href="#">TRANG CHỦ</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">LIÊN HỆ</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">DỊCH VỤ</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">ĐỘI NGŨ</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="login.html">ĐĂNG NHẬP</a>
            </li>*@
    </ul>
</div>

<script>
    const signUpButton = document.getElementById('signUp');
    const signInButton = document.getElementById('signIn');
    const container = document.getElementById('container');


    signUpButton.addEventListener('click', () => {
        container.classList.add('right-panel-active');
    });


    signInButton.addEventListener('click', () => {
        container.classList.remove('right-panel-active');
    });

</script>